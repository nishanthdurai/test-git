<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/view_article_view_related_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:padding="5dp"
        android:text="நீ நட்ட மரத்தின் நிழல்களை.. கடந்து செல்பவ"
        android:textColor="#292727"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_article_view_related_thumbnail_img" />

    <ImageView
        android:id="@+id/view_article_view_related_thumbnail_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_article_view_related_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Aug, 15, 2020"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/view_article_view_related_title_txt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view_article_view_related_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/view_article_view_related_title_txt" />


</androidx.constraintlayout.widget.ConstraintLayout>




