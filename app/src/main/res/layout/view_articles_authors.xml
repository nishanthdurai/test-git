<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/view_article_view_author_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/view_article_view_author_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="சரவணன் ர"
        android:textColor="@color/colorTextTitle"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/view_article_view_author_img"
        app:layout_constraintTop_toTopOf="@+id/view_article_view_author_img" />

    <TextView
        android:id="@+id/view_article_view_author_designation_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="சரவணன் ர"
        android:textColor="@color/colorTextTitle"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/view_article_view_author_img"
        app:layout_constraintTop_toBottomOf="@+id/view_article_view_author_name_txt" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorTextLite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>